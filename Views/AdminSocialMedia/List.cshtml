@model SocialMedia
@{
    ViewData["Title"] = "Admin Sosyal Medya Liste";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Sosyal Medya
    </div>
    <div class="card-body">
        <table class="table table-hover" id="datatablesSimple">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Facebook Link</th>
                    <th>Github Link</th>
                    <th>Instagram Link</th>
                    <th>Linkedin Link</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ID</td>
                    <td><a target="_blank" href="@Model.FacebookLink">Facebook</a></td>
                    <td><a target="_blank" href="@Model.GithubLink">Github</a></td>
                    <td><a target="_blank" href="@Model.InstagramLink">Instagram</a></td>
                    <td><a target="_blank" href="@Model.LinkedinLink">Linkedin</a></td>
                    <td><a class="btn btn-success" href="/AdminSosyalMedya/Guncelle">Güncelle</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@if (TempData["Type"] != null && !string.IsNullOrEmpty(TempData["Type"].ToString()))
{
    var title = "";
    var icon = "";
    var message = TempData["Message"]?.ToString() ?? "";

    if (TempData["Type"].ToString() == "error")
    {
        title = "Hata";
        icon = "error";
    }
    else if (TempData["Type"].ToString() == "success")
    {
        title = "Başarılı";
        icon = "success";
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: '@Html.Raw(title)',
                text: '@Html.Raw(message)',
                icon: '@Html.Raw(icon)',
                confirmButtonText: 'Tamam'
            });
        });
    </script>
}