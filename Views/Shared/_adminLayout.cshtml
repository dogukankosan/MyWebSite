    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dataTable = new simpleDatatables.DataTable("#datatablesSimple", {
                labels: {
                    placeholder: "Ara...",
                    perPage: "Kayıt göster",
                    noRows: "Gösterilecek kayıt yok",
                    noResults: "Arama kriterlerinize uygun sonuç bulunamadı",
                    info: "Toplam {rows} kayıttan {start} - {end} arası gösteriliyor",
                    loading: "Yükleniyor...",
                    infoFiltered: "{rows} kayıttan filtrelenmiş {filtered} kayıt gösteriliyor",
                    infoEmpty: "Gösterilecek kayıt yok",
                    select: {
                        rows: " {count} kayıt seçildi"
                    },
                    pagination: {
                        previous: "Önceki",
                        next: "Sonraki",
                        navigate: "Sayfalarda gezin",
                        page: "Sayfa",
                        showing: "Gösteriliyor",
                        of: " / {pages}"
                    }
                }
            });
