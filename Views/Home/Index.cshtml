    <script>
        $(document).ready(function() {
            generateMathQuestion();
        });
        var correctAnswer;
        function generateMathQuestion() {
            var num1 = Math.floor(Math.random() * 20) + 1;
            var num2 = Math.floor(Math.random() * 10) + 1;
            var operations = ['+', '-', '×'];
            var operation = operations[Math.floor(Math.random() * operations.length)];
            switch(operation) {
                case '+':
                    correctAnswer = num1 + num2;
                    break;
                case '-':
                    if (num1 < num2) {
                        var temp = num1;
                        num1 = num2;
                        num2 = temp;
                    }
                    correctAnswer = num1 - num2;
                    break;
                case '×':
                    num1 = Math.floor(Math.random() * 10) + 1;
                    num2 = Math.floor(Math.random() * 10) + 1;
                    correctAnswer = num1 * num2;
                    break;
            }
            $('#mathQuestion').text(num1 + ' ' + operation + ' ' + num2);
        }
        $('#contactForm').submit(function (event) {
            event.preventDefault();
          var $honeypot = $(this).find('input[name="website"]');
        if ($honeypot.length && $honeypot.val().trim() !== '') {
            $('#resultsucc').html('<div class="alert alert-danger">Spam tespit edildi.</div>');
            return;
        }
            var userAnswer = parseInt($('#mathCaptcha').val());
            if (isNaN(userAnswer) || userAnswer !== correctAnswer) {
                $('#mathError').html('❌ Matematik işlemi yanlış! Tekrar deneyin.');
                generateMathQuestion();
                $('#mathCaptcha').val('').focus();
                return;
            }
            $('#mathError').html('✅ Doğru!');
            $('#nameError').html('');
            $('#emailError').html('');
            $('#phoneError').html('');
            $('#subjectError').html('');
            $('#messageError').html('');
            $('#resultsucc').html('');
            $.ajax({
                url: '@Url.Action("ContactAdd", "Home")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#resultsucc').html('<div class="alert alert-success">✅ Mesaj Başarıyla Gönderildi.</div>');
                        $('#contactForm')[0].reset();
                        generateMathQuestion(); 
                    } else {
                        if (response.errors.ContactName) {
                            $('#nameError').html(response.errors.ContactName);
                        }
                        if (response.errors.ContactMail) {
                            $('#emailError').html(response.errors.ContactMail);
                        }
                        if (response.errors.ContactPhone) {
                            $('#phoneError').html(response.errors.ContactPhone);
                        }
                        if (response.errors.ContactSubject) {
                            $('#subjectError').html(response.errors.ContactSubject);
                        }
                        if (response.errors.ContactMessage) {
                            $('#messageError').html(response.errors.ContactMessage);
                        }
                        generateMathQuestion();
                    }
                },
                error: function () {
                    $('#resultsucc').html('<div class="alert alert-danger">❌ Bir hata oluştu.</div>');
                    generateMathQuestion();
                }
            });
        });
    </script>
