@model List<Education>
<div class="container-fluid" id="pigraEducation">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-3">
                <div class="education-header bg-dark h-100 pt-6 pe-6 pb-6">
                    <div class="text-start d-flex flex-column justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                        <h2 class="display-6 text-white mb-0">Eğitim</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="education-content h-100 pt-6 ps-6 pb-6">
                    <div class="row g-4">
                        @foreach (Education item in Model)
                        {
                            <div class="col-12">
                                <div class="education-item rounded p-4 h-100 wow fadeInUp" data-wow-delay="0.1s">
                                    <div class="d-flex align-items-center mb-3">
                                        <h4 class="fs-5 mb-0 me-4">@item.SchoolName</h4>
                                        <div>
                                            <span class="fa fa-calendar me-1"></span> @item.Years
                                        </div>
                                    </div>
                                    <p class="mb-0">
                                        @item.SectionName
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>